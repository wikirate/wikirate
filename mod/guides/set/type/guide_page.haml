%header.jumbotron.jumbotron-fluid
  .container
    %h1
      = render_title
    .lead
      = field_nest :description, view: :content
.container
  %section.guide-body.row
    %aside#guide-sidebar.col-sm-4.nodblclick
      .back-to-help-link.pb-5
        - link_text = capture_haml do
          %i.fas.fa-arrow-left
          Back to Help
        = link_to_card :guide_type, link_text
      .sidebar-nav-list
        = nest %i[guide_type list], items: { view: :sidebar_nav }

    %main#guide-body.col-sm-8
      .pb-5
        = render_menu
      = field_nest :body, view: :content_with_anchored_headers
  %section.guide-paging.p-5
    = render_guide_paging