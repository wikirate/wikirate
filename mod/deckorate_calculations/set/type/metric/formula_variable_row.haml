.row.p-2._filtered-list-item{ data: wrap_data }
  .col-3.formula-variable
    = text_field_tag "variable-name", name, class: "_variable-name"
  .col-5.metric-label
    = render_thumbnail_no_link
  .col-3.formula-options
    %a._edit-variable-options.float-left{ href: "#" }
      = icon_tag :pencil

    %ul._formula_options{ data: options }
  .col-1
    %span._remove-variable.btn.btn-outline-secondary.btn-sm
      = fa_icon :close
