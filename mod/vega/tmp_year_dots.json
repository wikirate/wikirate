{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic scatter plot example depicting automobile statistics.",
  "width": 400,
  "height": 400,
  "padding": 5,

  "data": [
    {
      "name": "records",
      "url": "http://localhost:3000/Answer/record_list.json?limit=0"
    },
    {
      "name": "counts",
      "source": "records",

      "transform": [
        { "type": "aggregate", "ops": ["distinct", "distinct","count"], "fields": ["company", "metric", "id"], "groupby": ["year"], "as": ["companies", "metrics", "answers"] }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {"data": "counts", "field": "metrics"},
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {"data": "counts", "field": "companies"},
      "range": "height"
    },
    {
      "name": "size",
      "type": "linear",
      "round": true,
      "nice": false,
      "zero": true,
      "domain": {"data": "counts", "field": "answers"},
      "range": [0, 200]
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 5,
      "title": "Metrics"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "Companies",
      "tickMinStep": 1
    }
  ],

  "legends": [
    {
      "size": "size",
      "title": "Answers",
      "format": "s",
      "symbolStrokeWidth": 0,
      "symbolFillColor" : "#03998D",
      "symbolType": "circle"
    }
  ],

  "marks": [
    {
      "name": "dots",
      "type": "symbol",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "metrics"},
          "y": {"scale": "y", "field": "companies"},
          "size": {"scale": "size", "field": "answers"},
          "shape": {"value": "circle"},
          "opacity": {"value": 1},
          "fill": {"value": "#03998D"}
        }
      }
    },
    {
      "name": "years",
      "type": "text",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "metrics", "offset": -10},
          "y": {"scale": "y", "field": "companies", "offset": -10},
          "text" : { "field" : "year" },

          "fill": {"value": "#03998D"}
        }
      }
    }
  ]
}
