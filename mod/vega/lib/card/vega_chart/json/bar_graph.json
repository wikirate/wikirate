{
  "signals" : [
    {
      "name": "maxBars",
      "value": 25,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 500
      }
    },
    {
      "name": "sortField",
      "value": "count",
      "bind": {"input": "select", "options": ["count", "value"]}
    }
  ],
  "data": [
    {
      "name": "answers"
    },
    {
      "name": "rawCounts",
      "source": "answers",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["value"],
          "fields": ["value"],
          "ops": ["count"],
          "as": ["count"]
        },
        {
          "type": "window",
          "ops": ["row_number"],
          "sort": {
            "field": {"signal": "sortField"},
            "order": {
              "signal": "sortField == 'count' ? 'descending' : 'ascending'"
            }
          },
          "as": ["seq"]
        }
      ]
    },
    {
      "name": "shownCounts",
      "source": "rawCounts",
      "transform": [
        {"type": "filter", "expr": "datum.seq <= maxBars"},
        {"type": "formula", "expr": "{ value: datum.value }", "as": "filter"}
      ]
    },
    {
      "name": "otherCounts",
      "source": "rawCounts",
      "transform": [
        {"type": "filter", "expr": "datum.seq > maxBars"},
        {
          "type": "aggregate",
          "fields": ["count"],
          "ops": ["sum"],
          "as": ["count"]
        },
        {
          "type": "formula",
          "expr": "'Other'",
          "as": "value"
        },
        {
          "type": "formula",
          "expr": "'Other'",
          "as": "label"
        },
        {
          "type": "formula",
          "expr": "maxBars + 1",
          "as": "seq"
        }
      ]
    },
    {
      "name": "counts",
      "source": ["shownCounts","otherCounts"]
    }
  ],
  "scales":[
    {
      "name": "xscale",
      "range": "width",
      "domain": {
        "data": "counts",
        "field": "label",
        "sort": {"field": "seq", "op": "min"}
      },
      "type": "band",
      "padding": 0.15
    },
    {
      "name":"yscale",
      "range":"height",
      "domain":{
        "data":"counts",
        "field":"count"
      },
      "type": "pow",
      "exponent": {
        "signal": "exponent"
      },
      "round":true
    }
  ],
  "marks":[
    {
      "type":"rect",
      "from":{
        "data":"counts"
      },
      "encode":{
        "update": {
          "x":{
            "scale":"xscale",
            "field":"label"
          },
          "width":{
            "scale":"xscale",
            "band":true,
            "offset":-1
          },
          "fill": {
            "value": "#03998d"
          },
          "y":{
            "scale":"yscale",
            "field":"count"
          },
          "y2":{
            "scale":"yscale",
            "value":0
          },
          "opacity": {
            "value": 0.75
          }
        },
        "hover": {
          "opacity": {
            "value": 1
          },
          "cursor": {
            "value": "pointer"
          }
        }
      }
    },
    {
      "type":"text",
      "encode":{
        "enter":{
          "align":{
            "value":"center"
          },
          "baseline":{
            "value":"bottom"
          }
        },
        "update":{
          "x":{
            "scale":"xscale",
            "signal":"tooltip.value",
            "band":0.5
          },
          "y":{
            "scale":"yscale",
            "signal":"tooltip.count",
            "offset":-2
          },
          "text":{
            "signal":"tooltip.count"
          }
        }
      }
    }
  ]
}
