- latest_answer = Card.fetch [name, year.to_s], new: {}
- if answer_count == 1
  = nest_item latest_answer, view: :full_bar
- else
  - class_up "bar", "with-bar-menu" if voo.show? :bar_menu
  .answer-group.grouped-record-list.w-100.nodblclick.d-flex._card-link{ class: classy("bar"), data: latest_answer.format.bar_wrap_data }
    .row.g-0.bar-body
      .bar-left.col-8
        = nest_item latest_answer, view: :bar_left
      .bar-middle.col-2
        = nest_item latest_answer, view: :bar_middle
      .bar-right.col-2
        = nest_item latest_answer, view: :markers
        .latest-and-count.d-flex.align-items-center
          .TYPE-year.color-on-hover
            = latest_answer.year
          .ps-1
            +
          = answer_count_badge :year, (answer_count - 1)
    .bar-menu
      = nest latest_answer, view: :bar_menu
