.m-0.p-0.bg-white.nodblclick.slide-container.border-top
  .container.position-relative
    .bg-white.dflex.p-5.m-3.showcase-banner.position-absolute.w-100
      .row.align-items-center.px-5
        .col-8.px-5
          %h2
            Are your clothes transparent?
          %p
            It's not just for emperors any more. Check out WikiRate's first
            %strong data showcase:
            a look into how top apparel companies are responding to a push for
            transparency.
        .col-4.text-center
          = link_to "Go to Showcase",
                    path: "https://staging.showcase.wikirate.org/",
                    class: "btn btn-primary btn-research"

  .p-5.text-center.col-12.col-md-8.mx-auto.solution-section
    .row
      .col-12.col-md-8.mx-auto
        %h3.text-muted.font-weight-light
          = nest :homepage_solution_text, view: :core
    .col-12.mt-5
      = modal_link "<span></span>", path: { mark: "homepage video container" },
                   class: "video-play-button drop-shadow", size: :large,
                   id: "_play-video"
      = nest :homepage_video_background_image, size: :original
    .col-12.text-center.video-section-lm
      %a.btn.btn-outline-secondary.m-3{href: "https://wikirateproject.org/"}
        Learn more
        .fa.fa-arrow-circle-right.ml-1.fa-lg
