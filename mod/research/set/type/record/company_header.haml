- if project_card
  .company-project-research.d-flex.align-items-center
    .w-50.pr-4
      %h2
        = link_to_card project_name, nil, class: "project-color", target: "_project"
      %h2
        = link_to_card company_card, nil, class: "company-color", target: "_company"
        = modal_link fa_icon("angle-down", class: "text-secondary"),
                     size: :large,
                     path: { mark: project_companies_mark,
                             metric: card.metric_name,
                             view: :filtered_content }
    .w-50.pl-4
      = nest company_project_mark, view: :research_header_progress
- else
  %h2
    = link_to_card company_name, nil, class: "company-color", target: "_company"