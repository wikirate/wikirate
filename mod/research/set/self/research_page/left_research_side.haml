- if project?
  = haml_partial :project_slot
= haml_partial :metric_slot
- if metric?
  = haml_partial :company_slot
- if metric? && company?
  = year_slot
= render_flash
- if metric?
  .border-bottom.background-grey.p-2.pl-4
    %h5
      Question
      %span.pull-right
        = button_tag "View Methodology", class: "_methodology-tab btn btn-sm btn-outline-secondary"
    .large-text
      = nest [metric, :question], view: :core
- if answer?
  .p-2.pl-4
    = answer_slot
