.row.nopadding.transparent-background-white.nodblclick
  .col-md-12.nopadding.d-md-block.d-lg-block.d-sm-none
    / tabs
    .tabbable.tabs-left
      %ul.nav.nav-tabs.intro-tabs.flex-column
        - categories.each do |type|
          %li{class: "nav-item #{type}-tab #{'active' if type == :company}"}
            %a{"data-target" => "##{type}-tab", "data-toggle" => "tab", :href => "#", class: "nav-link"}
              = nest "homepage: #{type} intro", view: :core
      .tab-content

        - categories.each do |type|

          %div{id: "#{type}-tab", class: "tab-pane #{'active' if type == :company}"}
            = nest "homepage #{type}", view: :carousel, items: { view: :homepage_item }
            .browse-button
              %a.btn.btn-sm.btn-default{:href => "/#{type}"}
                = "Browse #{type.to_s.pluralize.capitalize}"
  / for medium and mobile devices
  .col-md-12.nopadding.d-md-none.d-lg-none.d-sm-block
    - categories.each do |type|
      %h3.text-center.no-bold-text
        = nest "homepage: #{type} intro", view: :core
      .row.carousel
        = nest "homepage #{type}", hide: [:paging, :title], items: { view: :homepage_item }
