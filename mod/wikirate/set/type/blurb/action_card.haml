- card_link_data = wrap_data.merge card_link_url: card.uri
.action-card
  .card.justify-content-between.nodblclick._card-link{ data: card_link_data }
    .card-body
      %h5.card-title
        = field_nest :title, view: :core
      .py-3
        = field_nest :body, view: :core
    .action-card-footer.d-flex.justify-content-end
      = button_or_link
