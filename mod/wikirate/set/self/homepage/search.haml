%section#homepage-search-section.position-relative
  .video-container.w-100
    %video.w-100{ id: "home-video", preload: "", autoplay: "", muted: "", playsinline:"", loop: "" }
      %source{ src: "mod/wikirate/homepage_bg_video.mp4" }
    .front-of-video.container-fluid.position-absolute
      .container.p-5
        .w-75.mx-auto.text-center
          = section_header :homepage_search_heading
          .py-5
            = nest :search, view: :search_box
          .home-search-suggestions
            Popular searches:
            - %i[search featured].card.item_names.each do |keyword|
              %a._hot-keyword.btn.btn-outline-primary.m-2
                = keyword