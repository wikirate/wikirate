#homepage.nodblclick
  %section.container.p-3
    .d-flex.justify-content-between
      = nest :logo
      %nav#top-navbar.navbar.bg-white
        .navbar-container
          .top-nav-links
            .top-nav-account
              - class_up "signin-link", "btn btn-primary"
              %ul.navbar-nav
                %li.nav-item
                = nest :account_links, view: :core
            .top-nav-burger
              = nest :nav_menu, view: :core

  // SEARCH SECTION

  %section.container-fluid.bg-light
    .container.p-5
      %h1 Empowering people with open ESG data
      .lead Sustainability data across 128,000+ companies and over 3 million data points.
      .py-5
        = nest :search, view: :search_box
      .home-search-suggestions
        Popular searches:

  // TYPE LINK SECTION

  %section#homepage-type-links-section.container-fluid.p-3.px-5{ data: {
    "slick-selector": ".card-list-thumbnail",
    slick: { infinite: false,
             slidesToShow: 8,
             arrows: false,
             slidesToScroll: 1,
             responsive: [
               { breakpoint: "1200", settings: { slidesToShow: 7, arrows: true } },
               { breakpoint: "992",  settings: { slidesToShow: 5, arrows: true } },
               { breakpoint: "768",  settings: { slidesToShow: 4, arrows: true } },
               { breakpoint: "576",  settings: { slidesToShow: 2, arrows: true } }
             ]}.to_json
  } }
    = nest %i[cardtype featured],
           items: { view: :thumbnail, variant: :plural, size: :medium }


  %section#homepage-counts-section.container-fluid.bg-light
    .container.p-5
      = render_counts

  %section#homepage-involved-section.container.p-5
    = render_involved

  %section#homepage-delta-section.container-fluid.bg-light
    .container.p-5
      = render_delta

  %section#homepage-designer-section.container.p-5.text-center
    %h1 Our metric designers
    .lead Contributors like these pose the questions that WikiRate seeks to answer.
    .row.py-5
      - %i[designer featured].card.item_cards.each do |designer|
        .col-2
          = nest designer, view: :thumbnail, size: :medium

