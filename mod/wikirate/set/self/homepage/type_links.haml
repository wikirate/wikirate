
._type-link-list.type-link-list.d-flex
  .d-xl-none.d-flex.align-center.p-3
    %a.wr-prev.wr-arrow
      = material_symbol_tag :arrow_back_ios
  .col-10.col-xl-12
    .px-3{ data: {
        "slick-selector": ".card-list-thumbnail",
        slick: { infinite: false,
                 slidesToShow: 8,
                 arrows: false,
                 prevArrow: "._type-link-list .wr-prev",
                 nextArrow: "._type-link-list .wr-next",
                 slidesToScroll: 1,
                 # variableWidth: true,
                 responsive: [
                   { breakpoint: "1400", settings: { slidesToShow: 7, arrows: true } },
                   { breakpoint: "992",  settings: { slidesToShow: 5, arrows: true  } },
                   { breakpoint: "768",  settings: { slidesToShow: 4, arrows: true  } },
                   { breakpoint: "576",  settings: { slidesToShow: 2, arrows: true  } }
                 ]}.to_json
      } }
      = nest %i[cardtype featured],
               view: :core,
               items: { view: :thumbnail, variant: :plural, size: :medium }
  .d-xl-none.d-flex.align-center.p-3
    %a.wr-next.wr-arrow
      = material_symbol_tag :arrow_forward_ios
