%a#metric-header
- if multi_metric?
  .metric-project-research.row.align-items-center
    .col-2.h2
      = link_to_metric :prev, "Previous Question", metric_index - 1, icon_tag(:previous)
    .col-8
      = render_metric_option
      %label.text-secondary.py-3
        Metric question
        = metric_index + 1
        \/
        = metric_ids.size
    .col-2.h2.d-flex.justify-content-end
      = link_to_metric :next, "Next Question", metric_index + 1, icon_tag(:next)

  .d-flex.justify-content-end
    = modal_link "View all metric questions",
                 path: { mark: company_project_mark, view: :metrics_overview },
                 class: "btn btn-lg btn-outline-secondary _all_metrics_button",
                 size: :large

- else
  = render_metric_option
